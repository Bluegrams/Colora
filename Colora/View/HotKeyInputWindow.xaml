<Window x:Class="Colora.View.HotKeyInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:Colora.Properties"
        Title="{x:Static p:Resources.HotKeyInputWindow_Title}" Width="300" SizeToContent="Height"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Activated="Window_Activated">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="0,2"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="6,8"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <Button DockPanel.Dock="Right" Content="{x:Static p:Resources.Global_strCancel}" IsCancel="True"/>
            <Button DockPanel.Dock="Right" Content="OK" IsDefault="True" Click="SubmitButton_Click"/>
        </DockPanel>
        <GroupBox x:Name="grpKeyGesture"
                  Header="{x:Static p:Resources.HotKeyInputWindow_grpHeader}" Padding="0,6">
            <TextBox x:Name="txtKeyGesture" FontSize="14"
                     PreviewKeyDown="TxtKeyGesture_PreviewKeyDown"/>
        </GroupBox>
    </DockPanel>
</Window>
